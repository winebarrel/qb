{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "github.com/winebarrel/tachymeter"
      ],
      "matchManagers": [
        "gomod"
      ],
      "enabled": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": "true"
  }
}
